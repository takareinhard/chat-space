
.flash-box
  .flash-box__name
    グループを作成しました

.wrapper
  = render 'shared/side_bar'
  .chat-side
    .side-header
      .side-header__box
        %p.side-header__box__user-name name
        %ul.side-header__box__menu
          %li.side-header__box__menu__new-group
          =link_to "#", class: "new" do
            = fa_icon 'edit'
          %li.side-header__box__menu__edit-user
          =link_to "#", class: "edit" do
            = fa_icon 'cog'
    .groups
      %a.groups__new-group 
      =link_to "#" do
        .group
          %p.group__name test
          %p.group__latest-message test

      %a.groups__new-group
      =link_to "#" do
        .group
          %p.group__name test
          %p.group__latest-message test

  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group test
        %ul.main-header__left-box__member-list
          Member : 
          %li.main-header__left-box__member-list__member
            &nbsp;member name
      %a
      =link_to "#" do
        .main-header__edit-btn
          Edit

    .messages
      .message
        -# "data-message_id=something"
        .message__upper-info
          %p.message__upper-info__talker
            membername
          %p.message__upper-info__date
            2019/00/00(week) 00:00:00
        %p.message__text test

    .form
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'
